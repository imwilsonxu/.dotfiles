# Thanks to: http://www.selenic.com/mercurial/hgrc.5.html

[ui]
username = Wilson Xu <imwilsonxu@gmail.com>
# editor = /usr/bin/vim -c "r ~/.hgtemplate"
editor = vim
# e.g. ssh://hg@bitbucket.org/imwilsonxu/dotfiles
ssh = ssh -C

[trusted]
users = root

[pager]
pager = LESS='FSRX' less

[alias]
# Show only five most recent changesets.
latest = log --limit 5
# Show latest for stable branch.
stable = latest -b stable
# Add ! to make a shell command.
echo = !echo

[extensions]
# http://mercurial.selenic.com/wiki/EolExtension
eol =
# http://mercurial.selenic.com/wiki/ColorExtension
color =
# http://mercurial.selenic.com/wiki/PagerExtension
pager =
# http://mercurial.selenic.com/wiki/FetchExtension
fetch =
# http://mercurial.selenic.com/wiki/CheckFilesExtension
checkfiles = ~/.dotfiles/.hg-checkfiles.py
# http://mercurial.selenic.com/wiki/GraphlogExtension
hgext.graphlog =
# http://mercurial.selenic.com/wiki/ProgressExtension
progress =
# http://mercurial.selenic.com/wiki/PurgeExtension
hgext.purge =



[hooks]
#pre-commit = find $(hg root) -type f -print0 | xargs -0 chmod a-x
#pretxncommit.whitespace = hg export tip | (! egrep -q '^\+.*[ \t]$')
# enables hook to check incoming changeset
#pretxnchangegroup.checkfiles = python:~/.dotfiles/checkfiles.py:check_hook
# enables hook to stop bad commits
pretxncommit.checkfiles = python:~/.dotfiles/checkfiles.py:check_hook
# enables hook to fix files before creating commit
precommit.checkfiles = python:~/.dotfiles/checkfiles.py:fixup_hook

[checkfiles]
# default is any text file
checked_exts = .c .h .cpp .xml .cs .html .js .css .txt .py .nsi .java .aspx .asp .bat .cmd .glsl
# default are these (common autogenerated files)
ignored_exts = .sln .suo .vcproj .csproj .ui
# ignored_files = contains_tabs.txt contains_trailing_ws.txt
