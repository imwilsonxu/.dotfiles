# Alias.
alias v='vim -p'
alias c='clear'
alias e='exit'
alias l='ls -lFhG'
alias la='l -a'
alias mkdir='mkdir -p '
alias cp='cp -vi'
alias mv='mv -vi'
alias rmf='rm -rf '
alias psi='ps h -eo pmem,comm | sort -nr | head'
alias h="history | grep "
alias f="find . | grep "
alias p="ps aux | grep "
alias ..="cd .."
alias ...="cd ../.."
alias dfh="df -h"
alias perlreplace="perl -p -i -e "

# grep
export GREP_OPTIONS='--color=always'
alias pygrep='grep --include=*.py -Ir '
alias rbgrep='grep --include=*.rb -Ir '
alias htmlgrep='grep --include=*.html -Ir '
alias jsgrep='grep --include=*.js -Ir '
alias cssgrep='grep --include=*.css -Ir '

# check out the depth of current bash env
# handy if u open bash frequently in Vim like me :)
alias dp='ps aux | grep /bin/bash | grep -v grep | wc -l'

alias py="python" 
alias rb="ruby" 

# Git
alias gs='git st '
alias gl='git lg'
alias gd='git diff '
alias ga='git add -A '
alias gc='git ci '
alias gamend='git ci --amend '
alias gundo='git reset --hard HEAD'
